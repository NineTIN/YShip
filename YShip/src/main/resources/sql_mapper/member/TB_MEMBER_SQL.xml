<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="member">
    <!-- SELECT -->
    <select id="select_all" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT 
			  PK_MEMBER_KEY,
			  MEMBER_E_MAIL,
			  MEMBER_ID,
			  MEMBER_PW,
			  MEMBER_FIRST_NAME,
			  MEMBER_LAST_NAME,
			  MEMBER_FIRST_NAME_EN,
			  MEMBER_LAST_NAME_EN,
			  MEMBER_BIRTH_DT,
			  MEMBER_ZIPCODE,
			  MEMBER_ADDR1,
			  MEMBER_ADDR2,
			  MEMBER_GENDER,
			  MEMBER_CRT_DT
 			FROM
 				TB_MEMBER
        ]]>
    </select>
    
   <select id="select_getMemKey" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT 
			  PK_MEMBER_KEY
 			FROM
 				TB_MEMBER
 			WHERE
 				 MEMBER_E_MAIL = #{email}
        ]]>
    </select>
    
    
    <!-- INSERT --> 
    <insert id="insertCreateID" parameterType="hashmap">
        <![CDATA[
        	 INSERT INTO TB_MEMBER
	        (
			  PK_MEMBER_KEY,
			  MEMBER_E_MAIL,
			  MEMBER_PW,
			  MEMBER_FIRST_NAME,
			  MEMBER_LAST_NAME
	        )
	        VALUES
	        (
	            0,
	            #{email},
	            #{password},
	            #{first name},
	            #{last name}
	        )
        ]]>
	</insert>
	
